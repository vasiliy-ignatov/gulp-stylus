*
	box-sizing border-box

html, body
	font-family $Roboto

body
	display: flex;
	margin: 0;

.app
	display flex
	flex 1 1 auto
	flex-flow column nowrap
	min-height 100vh

.main
	flex 1 1 auto;

.container
	max-width 1440px
	padding 0 20px
	margin 0 auto

.block
	height 100%
	padding 10px
	color black
	background-color rgba(86,61,124,.15)
	border 1px solid rgba(86,61,124,.2)



