*
	box-sizing border-box

html, body
	height 100%
	font-family $Roboto

.app
	height 100%
	display flex
	flex-direction column

.main
	flex 1 0 auto

.container
	max-width 1440px
	padding 0 20px
	margin 0 auto

.block
	height 100%
	padding 10px
	color black
	background-color rgba(86,61,124,.15)
	border 1px solid rgba(86,61,124,.2)

$elemProps(params)
	width percentage(params.$width / params.$parentW)
	height percentage(params.$height / params.$parentH)

	if params.$top == ''
		top auto
	else
		top percentage(params.$top / params.$parentH)

	if params.$right == ''
		right auto
	else
		right percentage(params.$right / params.$parentW)

	if params.$bottom == ''
		bottom auto
	else
		bottom percentage(params.$bottom / params.$parentH)

	if params.$left == ''
		left auto
	else
		left percentage(params.$left / params.$parentW)

.coub
	$bg = green
	$w = 1000px
	$h = 500px
	$coords = {
		$parentW: $w,
		$parentH: $h,
		$width: 100,
		$height: 100,
		$top: '',
		$right: '',
		$bottom: '',
		$left: ''
	}

	max-width 100%
	margin 0 auto

	&__inner
		position relative
		padding-bottom  percentage($h / $w)
		background-color $bg

	&__item
		position absolute

	&__item_red
		$coords.$top = 100
		$coords.$left = 100
		$coords.$right = ''
		$coords.$bottom = ''
		$elemProps($coords)
		background-color red

		@media $md
			$coords.$top = 200
			$coords.$left = 200
			$coords.$right = ''
			$coords.$bottom = ''
			$elemProps($coords)

	&__item_black
		$coords.$top = ''
		$coords.$left = ''
		$coords.$right = 100
		$coords.$bottom = 100
		$elemProps($coords)
		background-color black

		@media $md
			$coords.$top = ''
			$coords.$left = ''
			$coords.$right = 200
			$coords.$bottom = 200
			$elemProps($coords)

